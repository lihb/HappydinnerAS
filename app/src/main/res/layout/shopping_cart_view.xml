<?xml version="1.0" encoding="utf-8"?>
<com.handgold.pjdc.ui.widget.ShoppingCartView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <ImageView
            android:id="@+id/iv_cart_bg"
            android:layout_width="@dimen/shop_cart_view_size"
            android:layout_height="@dimen/shop_cart_view_size"
            android:src="@drawable/shopcart_view_selector"
            android:layout_marginBottom="@dimen/cartview_bottom_margin"
            />
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/shopcart_content_top_marging"
                >
                <TextView
                        android:id="@+id/text_cart_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="#ff6000"
                        android:text="220"
                        android:textSize="@dimen/fragment_food_left_text_size"
                        />
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_cart_price"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        >
                        <ImageView
                                android:id="@+id/iv_cart_icon"
                                android:layout_width="@dimen/cart_icon_size"
                                android:layout_height="@dimen/cart_icon_size"
                                android:src="@drawable/oder_icon"
                                />
                        <TextView
                                android:id="@+id/text_cart_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:text="2ä»½"
                                android:textColor="#000000"
                                android:textSize="@dimen/pay_title_text_size"
                                />
                </LinearLayout>
        </RelativeLayout>
</com.handgold.pjdc.ui.widget.ShoppingCartView>