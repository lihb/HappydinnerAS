<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
            android:id="@+id/item_pic_iv"
            android:layout_width="@dimen/movie_item_width"
            android:layout_height="@dimen/movie_item_height"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/pic_moive_xiaowangzi"
            />
    <TextView
            android:id="@+id/item_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/item_pic_iv"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:textSize="@dimen/content_title_text_size"
            android:textColor="#ccffffff"
            />
</RelativeLayout>