<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/fragment_food_left_item_height"
              android:paddingLeft="@dimen/fragment_food_left_item_padding"
              android:layout_marginTop="@dimen/movie_game_viewpager_top_margin"
              android:clickable="true"
              android:background="@drawable/food_left_bg_selector"
              android:minHeight="?android:attr/listPreferredItemHeight"
              android:gravity="center_vertical"
        >
    <ImageView
            android:id="@+id/pay_icon_iv"
            android:layout_width="@dimen/fragment_food_left_icon_size"
            android:layout_height="@dimen/fragment_food_left_icon_size"
            android:duplicateParentState="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_zhifubao"
            />
    <TextView
            android:id="@+id/pay_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/header_left_margin"
            android:textSize="@dimen/fragment_food_left_text_size"
            android:duplicateParentState="true"
            android:textColor="@drawable/food_left_text_selector"
            android:text="支付宝"
            android:layout_gravity="center_vertical"
            />

</LinearLayout>